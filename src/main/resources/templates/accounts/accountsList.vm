<div>
    <div>
        <a href="/">Dashboard</a>
    </div>
    <h1>
        Accounts : ${accounts.size()}
    </h1>
    #if (${accounts.size()} == 0)
    <div>No accounts yet</div>
    #else
    <div>
        #foreach ($account in $accounts)
        <div>
            <ul>
                <li>
                    <div><a href="/accounts/details/${account.name}">${account.name}</a></div>
                    <div>${account.balance}</div>
                </li>
            </ul>
        </div>
        #end
    </div>
    #end
</div>
